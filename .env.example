# ========================================
# CREDENCIALES PROYECTO LINCE
# ========================================
# IMPORTANTE: NO commitear .env con credenciales reales
# Este es un archivo de ejemplo. Copia como .env y rellena con tus datos.

# ========================================
# FIREBASE CONFIGURATION
# ========================================
# Obtén estas credenciales desde:
# Firebase Console > Project Settings > Your apps > Firebase SDK snippet

# Android Configuration
FIREBASE_ANDROID_API_KEY=AIzaSy...
FIREBASE_ANDROID_AUTH_DOMAIN=proyecto-lince.firebaseapp.com
FIREBASE_ANDROID_PROJECT_ID=proyecto-lince
FIREBASE_ANDROID_STORAGE_BUCKET=proyecto-lince.appspot.com
FIREBASE_ANDROID_MESSAGING_SENDER_ID=123456789012
FIREBASE_ANDROID_APP_ID=1:123456789012:android:abc123def456
FIREBASE_ANDROID_MEASUREMENT_ID=G-ABCDEF1234

# iOS Configuration
FIREBASE_IOS_API_KEY=AIzaSy...
FIREBASE_IOS_AUTH_DOMAIN=proyecto-lince.firebaseapp.com
FIREBASE_IOS_PROJECT_ID=proyecto-lince
FIREBASE_IOS_STORAGE_BUCKET=proyecto-lince.appspot.com
FIREBASE_IOS_MESSAGING_SENDER_ID=123456789012
FIREBASE_IOS_APP_ID=1:123456789012:ios:abc123def456
FIREBASE_IOS_MEASUREMENT_ID=G-ABCDEF1234

# ========================================
# GOOGLE CLOUD CONFIGURATION (Para IA)
# ========================================
# Obtén estas credenciales desde:
# Google Cloud Console > APIs & Services > Credentials

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=proyecto-lince

# Service Account para Cloud Functions
GOOGLE_CLOUD_SERVICE_ACCOUNT_EMAIL=firebase-adminsdk-xxxxx@proyecto-lince.iam.gserviceaccount.com
GOOGLE_CLOUD_SERVICE_ACCOUNT_KEY_PATH=./serviceAccountKey.json

# Cloud Speech-to-Text API Key
GOOGLE_CLOUD_SPEECH_API_KEY=AIzaSy...

# Cloud Vision API Key (para análisis facial)
GOOGLE_CLOUD_VISION_API_KEY=AIzaSy...

# ========================================
# FIREBASE CLOUD FUNCTIONS
# ========================================
# URLs de tus Cloud Functions desplegadas
# Formato: https://REGION-PROJECT_ID.cloudfunctions.net/FUNCTION_NAME

FIREBASE_FUNCTION_ANALISIS_VOZ_URL=https://us-central1-proyecto-lince.cloudfunctions.net/analizarVoz
FIREBASE_FUNCTION_ANALISIS_GESTO_URL=https://us-central1-proyecto-lince.cloudfunctions.net/analizarGesto
FIREBASE_FUNCTION_ANALISIS_FACIAL_URL=https://us-central1-proyecto-lince.cloudfunctions.net/analizarFacial
FIREBASE_FUNCTION_GENERAR_SUGERENCIA_URL=https://us-central1-proyecto-lince.cloudfunctions.net/generarSugerencia
FIREBASE_FUNCTION_GENERAR_INSIGHT_URL=https://us-central1-proyecto-lince.cloudfunctions.net/generarInsight

# ========================================
# STRIPE (MONETIZACIÓN)
# ========================================
# Obtén estas credenciales desde:
# Stripe Dashboard > Developers > API keys

# Publishable Key (pública, OK para cliente)
STRIPE_PUBLISHABLE_KEY=pk_test_51...

# Secret Key (PRIVADA, solo en backend/Cloud Functions)
STRIPE_SECRET_KEY=sk_test_51...

# Webhook Secret (para verificar webhooks)
STRIPE_WEBHOOK_SECRET=whsec_...

# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================

# Ambiente actual: development | staging | production
NODE_ENV=development

# URL del backend (si usas servidor propio además de Firebase)
BACKEND_URL=https://api.proyecto-lince.com

# ========================================
# ANALYTICS & MONITORING
# ========================================

# Google Analytics 4
GA4_MEASUREMENT_ID=G-ABCDEF1234

# Firebase Crashlytics (ya incluido en Firebase SDK)
# No requiere credenciales adicionales

# ========================================
# CONFIGURACIÓN DE IA
# ========================================

# Umbrales de confianza para modelos de IA
IA_UMBRAL_CONFIANZA_MINIMO=0.75
IA_UMBRAL_FRUSTRACION_BAJO=30
IA_UMBRAL_FRUSTRACION_MEDIO=60
IA_UMBRAL_FRUSTRACION_ALTO=85

# Frecuencia de análisis (en segundos)
IA_FRECUENCIA_ANALISIS=5

# ========================================
# ASSETS & STORAGE
# ========================================

# CDN para assets (opcional)
CDN_URL=https://cdn.proyecto-lince.com

# Firebase Storage Bucket (ya configurado arriba)
# Ruta para uploads de padres
FIREBASE_STORAGE_UPLOADS_PATH=uploads/

# ========================================
# NOTIFICACIONES PUSH
# ========================================

# Firebase Cloud Messaging Server Key
FCM_SERVER_KEY=AAAAxxxxxxx:APA91bF...

# ========================================
# TESTING & DEVELOPMENT
# ========================================

# Email para usuario de prueba
TEST_USER_EMAIL=test@proyecto-lince.com
TEST_USER_PASSWORD=TestPassword123!

# Firebase Emulator Ports (para desarrollo local)
FIREBASE_EMULATOR_AUTH_PORT=9099
FIREBASE_EMULATOR_FIRESTORE_PORT=8080
FIREBASE_EMULATOR_FUNCTIONS_PORT=5001
FIREBASE_EMULATOR_STORAGE_PORT=9199

# ========================================
# SECURITY
# ========================================

# Secret para JWT (si usas autenticación adicional)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Encryption key para datos sensibles
ENCRYPTION_KEY=your-encryption-key-32-characters

# ========================================
# RATE LIMITING & QUOTAS
# ========================================

# Máximo de solicitudes por usuario por hora
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_HOURS=1

# ========================================
# LOGGING
# ========================================

# Nivel de log: error | warn | info | debug
LOG_LEVEL=info

# Enviar logs a servicio externo (opcional)
LOG_SERVICE_URL=https://logs.proyecto-lince.com
LOG_SERVICE_API_KEY=log_api_key_here

# ========================================
# BACKUP & DISASTER RECOVERY
# ========================================

# Configuración de backups automáticos
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30

# ========================================
# COMPLIANCE & LEGAL
# ========================================

# URLs para términos y privacidad
TERMS_OF_SERVICE_URL=https://proyecto-lince.com/terms
PRIVACY_POLICY_URL=https://proyecto-lince.com/privacy
DATA_PROCESSING_AGREEMENT_URL=https://proyecto-lince.com/dpa

# ========================================
# SUPPORT & CONTACT
# ========================================

SUPPORT_EMAIL=soporte@proyecto-lince.com
ADMIN_EMAIL=admin@proyecto-lince.com

# ========================================
# FEATURE FLAGS
# ========================================

# Habilitar/deshabilitar funcionalidades
FEATURE_STRIPE_ENABLED=false
FEATURE_OFFLINE_MODE=true
FEATURE_BETA_FEATURES=false
FEATURE_ANALYTICS_ENABLED=true
FEATURE_CRASHLYTICS_ENABLED=true
