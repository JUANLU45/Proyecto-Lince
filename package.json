{
  "name": "proyecto-lince",
  "version": "1.0.0",
  "description": "Aplicación educativa para niños con síndrome de Down - Desarrollo sensorial con IA adaptativa",
  "main": "expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "prebuild": "expo prebuild --clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify:complexity": "node scripts/verify-complexity.js",
    "verify:file-size": "node scripts/verify-file-size.js",
    "verify:a11y": "node scripts/verify-accessibility.js",
    "verify:all": "npm run lint && npm run type-check && npm run format:check && npm run test:ci && npm run verify:complexity && npm run verify:file-size && npm run verify:a11y",
    "clean": "npx react-native clean",
    "reset-cache": "npx react-native start --reset-cache",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@react-native-async-storage/async-storage": "1.19.3",
    "@react-native-firebase/analytics": "^18.6.0",
    "@react-native-firebase/app": "^18.6.0",
    "@react-native-firebase/auth": "^18.6.0",
    "@react-native-firebase/crashlytics": "^18.6.0",
    "@react-native-firebase/firestore": "^18.6.0",
    "@react-native-firebase/functions": "^18.6.0",
    "@react-navigation/bottom-tabs": "^6.5.3",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.11",
    "expo": "^54.0.10",
    "expo-av": "~13.10.4",
    "expo-camera": "~13.4.4",
    "expo-constants": "~14.4.2",
    "expo-dev-client": "~2.4.12",
    "expo-font": "~11.4.0",
    "expo-haptics": "~12.4.0",
    "expo-linear-gradient": "~12.3.0",
    "expo-splash-screen": "^31.0.10",
    "expo-status-bar": "~1.6.0",
    "expo-system-ui": "~2.4.0",
    "react": "18.2.0",
    "react-native": "0.72.15",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "13.9.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.9",
    "@babel/preset-env": "^7.25.9",
    "@babel/preset-typescript": "^7.25.9",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.8.1",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.2.0",
    "@types/react-native": "~0.72.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.57.1",
    "eslint-config-expo": "^7.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-expo": "~49.0.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "~5.6.3",
    "whatwg-fetch": "^3.6.20"
  },
  "private": true,
  "keywords": [
    "react-native",
    "expo",
    "down-syndrome",
    "sensory-integration",
    "therapy",
    "children",
    "education",
    "ai",
    "firebase"
  ],
  "author": "Proyecto Lince Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/JUANLU45/Proyecto-Lince.git"
  },
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
